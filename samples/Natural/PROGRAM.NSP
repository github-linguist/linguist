* > Natural Example: Consultar Funcion√°rios no Adabas <
* --------------------------------------------------
DEFINE DATA
LOCAL
1 EMP-VIEW VIEW OF EMPLOYEES
  2 PERSONNEL-ID
  2 NAME
  2 FIRST-NAME
  2 DEPT
  2 SALARY (1)
*
1 #DEPT-PROCURADO (A3)  INIT <'SAL'>
1 #MSG             (A40)
END-DEFINE
*
FORMAT PS=20 LS=80
*
WRITE '--- RELATORIO DE FUNCIONARIOS (DEP:' #DEPT-PROCURADO ') ---' /
*
/* Busca no banco Adabas usando o descritor DEPT
FIND EMP-VIEW WITH DEPT = #DEPT-PROCURADO
  WHERE SALARY(1) > 25000
  
  IF NO RECORDS FOUND
    MOVE 'NENHUM FUNCIONARIO ENCONTRADO.' TO #MSG
    ESCAPE BOTTOM
  END-NOREC
  
  DISPLAY 
    PERSONNEL-ID 
    NAME 
    FIRST-NAME 
    SALARY (1)
    
  AT END OF DATA
    SKIP 2
    WRITE 'TOTAL DE REGISTROS PROCESSADOS:' *NUMBER
  END-ENDDATA
  
END-FIND
*
IF #MSG ^= ' '
  WRITE #MSG
END-IF
*
END