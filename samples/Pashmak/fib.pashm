# Printing the fibonacci pattern

func fib(int $n=1000)
    $a = 1
    $b = 1

    while $a < $n
        println($a)

        $tmp_a = $a
        $tmp_b = $b

        $a = $tmp_b

        $b = $tmp_a + $tmp_b
     endwhile
endfunc

fib(10000)
