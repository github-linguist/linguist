Global MainWindow

Global OkButton

Declare OkButtonEvent(EventType)

Procedure OpenMainWindow(x = 0, y = 0, width = 160, height = 80)
  MainWindow = OpenWindow(#PB_Any, x, y, width, height, "", #PB_Window_SystemMenu)
  SetWindowColor(MainWindow, RGB(238,251,249))
  OkButton = ButtonGadget(#PB_Any, 30, 25, 100, 30, "CLICK ME")
EndProcedure

Procedure MainWindow_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case OkButton
          OkButtonEvent(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure

