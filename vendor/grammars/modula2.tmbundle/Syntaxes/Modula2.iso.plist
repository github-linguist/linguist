<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>name</key>
    <string>ISO Modula-2</string>
	<key>scopeName</key>
	<string>source.modula2.iso</string>
	<key>fileTypes</key>
	<array>
		<string>.def</string>
		<string>.mod</string>
	<key>keyEquivalent</key>
	<string>^~M</string>
	</array>
	<key>firstLineMatch</key>
	<string>^[:blank:]*(*!m2iso(+[a-z]+)?*).*</string>
	<key>patterns</key>
	<array>
		<dict>
			<key>name</key>
			<string>keyword.control</string>
			<key>match</key>
			<string>\b(CASE|ELSE|ELSIF|EXCEPT|EXIT|FINALLY|FOR|IF|LOOP|REPEAT|RETRY|RETURN|THEN|UNTIL|WHILE)\b</string>
		</dict>
		<dict>
			<key>name</key>
			<string>keyword.operator</string>
			<key>match</key>
			<string>\b(AND|DIV|IN|MOD|NOT|OR|REM)\b</string>
		</dict>
		<dict>
			<key>name</key>
			<string>keyword.other</string>
			<key>match</key>
			<string>\b(ARRAY|BEGIN|BY|CONST|DEFINITION|DO|END|EXPORT|FORWARD|FROM|IMPLEMENTATION|IMPORT|MODULE|OF|PACKEDSET|POINTER|PROCEDURE|QUALIFIED|RECORD|SET|TO|TYPE|VAR|WITH)\b</string>
		</dict>
		<dict>
			<key>name</key>
			<string>constant.numeric.character</string>
			<key>match</key>
			<string>[0-7]{1,3}C\b</string>
		</dict>
		<dict>
			<key>name</key>
			<string>constant.numeric.base8</string>
			<key>match</key>
			<string>[0-7]+B\b</string>
		</dict>
		<dict>
			<key>name</key>
			<string>constant.numeric.base10</string>
			<key>match</key>
			<string>[0-9]+(.[0-9]+([eE][+-]?[0-9]+)?)?</string>
		</dict>
		<dict>
			<key>name</key>
			<string>constant.numeric.base16</string>
			<key>match</key>
			<string>[0-9][0-9A-F]*H\b</string>
		</dict>
		<dict>
			<key>name</key>
			<string>support.constant</string>
			<key>match</key>
			<string>\b(FALSE|INTERRUPTIBLE|NIL|PROC|TRUE|UNINTERRUBTIBLE)\b</string>
		</dict>
		<dict>
			<key>name</key>
			<string>support.type</string>
			<key>match</key>
			<string>\b(BOOLEAN|BITSET|CARDINAL|CHAR|COMPLEX|INTEGER|LONGCOMPLEX|LONGINT|LONGREAL|PROTECTION|REAL)\b</string>
		</dict>
		<dict>
			<key>name</key>
			<string>support.function</string>
			<key>match</key>
			<string>\b(ABS|CAP|CHR|CMPLX|DEC|DISPOSE|EXCL|FLOAT|HALT|HIGH|IM|INC|INCL|INT|LENGTH|LFLOAT|MAX|MIN|NEW|ODD|ORD|RE|SIZE|TRUNC|VAL)\b</string>
		</dict>
		<dict>
			<key>name</key>
			<string>support.class</string>
			<key>match</key>
			<string>\b(Storage|SYSTEM)\b</string>
		</dict>
		<dict>
			<key>name</key>
			<string>support.constant.nonpervasive</string>
			<key>match</key>
			<string>\b(BITSPERLOC|LOCSPERWORD)\b</string>
		</dict>
		<dict>
			<key>name</key>
			<string>support.type.nonpervasive</string>
			<key>match</key>
			<string>\b(ADDRESS|LOC|WORD)\b</string>
		</dict>
		<dict>
			<key>name</key>
			<string>support.function.nonpervasive</string>
			<key>match</key>
			<string>\b(ADDADR|ADR|ALLOCATE|CAST|DEALLOCATE|DIFADR|MAKEADR|ROTATE|SHIFT|SUBADR|TSIZE)\b</string>
		</dict>
		<dict>
			<key>name</key>
			<string>string.quoted.single</string>
			<key>match</key>
			<string>'[^']*'</string>
		</dict>
		<dict>
			<key>name</key>
			<string>string.quoted.double</string>
			<key>match</key>
			<string>"[^"]*"</string>
		</dict>
		<dict>
			<key>name</key>
			<string>comment.block.dialecttag</string>
			<key>begin</key>
			<string>(*!</string>
			<key>end</key>
			<string>*)</string>
		</dict>
		<dict>
			<key>name</key>
			<string>comment.block.preprocessor</string>
			<key>begin</key>
			<string>(*?</string>
			<key>end</key>
			<string>*)</string>
		</dict>
		<dict>
			<key>name</key>
			<string>comment.block.pragma</string>
			<key>begin</key>
			<string><*</string>
			<key>end</key>
			<string>*></string>
		</dict>
		<dict>
			<key>name</key>
			<string>comment.block.untitled</string>
			<key>begin</key>
			<string>(*[^!\?]</string>
			<key>end</key>
			<string>*)</string>
		</dict>
	</array>
	<key>uuid</key>
	<string></string>
</dict>
</plist>
