{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Thirsty-lang",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.thirsty",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.thirsty",
          "match": "\\b(drink|pour|sip|thirsty|hydrated|refill|glass|fountain|cascade|await|spillage|cleanup|import|export|sacred|ocean|stream|parched|quenched|reservoir|bottle|return)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.thirsty",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.thirsty",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.thirsty",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.thirsty",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.thirsty",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.thirsty",
          "match": "=|\\+|\\-|\\*|/|>|<|==|!=|>=|<="
        }
      ]
    }
  },
  "scopeName": "source.thirsty"
}
